{
  "name": "cypress-automation-framework",
  "version": "1.0.0",
  "description": "Enterprise-grade Cypress automation framework with auto-healing, visual testing, and comprehensive reporting",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:smoke": "cypress run --spec '**/smoke/**/*.spec.ts'",
    "cy:run:regression": "cypress run --spec '**/regression/**/*.spec.ts'",
    "cy:run:integration": "cypress run --spec '**/integration/**/*.spec.ts'",
    "cy:run:visual": "cypress run --spec '**/visual/**/*.spec.ts'",
    "cy:run:headless": "cypress run --headless",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "test": "npm run cy:run",
    "test:smoke": "npm run cy:run:smoke",
    "test:regression": "npm run cy:run:regression",
    "test:parallel": "cypress run --record --parallel",
    "report:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "report:html": "cypress run --reporter mochawesome",
    "clean:reports": "rm -rf cypress/reports/* cypress/screenshots/* cypress/videos/* allure-results/* allure-report/*",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -f docker/Dockerfile -t cypress-framework .",
    "docker:run": "docker run --rm -v $(pwd):/workspace cypress-framework"
  },
  "keywords": [
    "cypress",
    "automation",
    "testing",
    "framework",
    "auto-healing",
    "visual-testing",
    "pom",
    "typescript"
  ],
  "author": "Cypress Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@cypress/grep": "^4.0.1",
    "@types/node": "^18.19.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cypress": "^13.15.0",
    "cypress-real-events": "^1.13.0",
    "cypress-wait-until": "^3.0.2",
    "eslint": "^8.57.0",
    "eslint-plugin-cypress": "^2.15.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@faker-js/faker": "^9.0.3",
    "allure-cypress": "^3.3.2",
    "cypress-visual-regression": "^5.3.0",
    "dotenv": "^16.4.5",
    "lodash": "^4.17.21"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
